{
    // Assembly Formatting
    "[asm-collection]": {
        "editor.tabSize": 8
    },
    "files.associations": {
        "*.asm": "asm-collection",
        "*.xci": "xml",
        "*.core": "yaml"
    },

    // verilog
    "verilog.linting.iverilog.runAtFileLocation": false,
    "verilog.linting.iverilog.arguments": "-Wall -g2012 -DLINTER=1 -DSIM=1",
    "verilog.linting.linter": "iverilog",

    // Auto Formatting
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // Live Server
    "liveServer.settings.root": "docs/"
}
