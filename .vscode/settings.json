{
    // Assembly Formatting
    "[asm-collection]": {
        "editor.tabSize": 8
    },
    "files.associations": {
        "*.asm": "asm-collection"
    },

    // verilog
    "verilog.linting.iverilog.runAtFileLocation": true,
    "verilog.linting.iverilog.arguments": "-Wall -g2012 -DINCLUDE=1 -DSIM=1 -DTEST=1",
    "verilog.linting.linter": "iverilog",

    // Auto Formatting
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // Live Server
    "liveServer.settings.root": "docs/"
}
